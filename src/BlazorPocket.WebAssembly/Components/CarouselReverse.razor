            <MudCard Elevation="24">
                <MudCardContent Class="py-10 px-6 pb-6 mud-typography-body1">
                    @L["Suggest fun activities to help me make friends in a new city"]
                </MudCardContent>
            </MudCard>
        </div>
        <div class="swiper-slide">
            <MudCard Elevation="24">
                <MudCardContent Class="py-10 px-6 pb-6 mud-typography-body1">
