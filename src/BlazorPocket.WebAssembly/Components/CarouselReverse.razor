        </div>
        <div class="swiper-slide">
            <MudCard Elevation="24">
                <MudCardContent Class="py-10 px-6 pb-6 mud-typography-body1">
                    @L["Write a text inviting my neighbors to a barbecue"]
                </MudCardContent>
