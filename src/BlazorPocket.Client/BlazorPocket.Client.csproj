    <PackageReference Include="MudBlazor" Version="7.0.0-preview.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\PocketBaseClient.BlazorPocket\PocketBaseClient.BlazorPocket.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="Pages\Account\EmailChangeConfirm.razor">
